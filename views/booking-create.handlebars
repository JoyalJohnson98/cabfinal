<div class="box">
    <div class="box1">
        <form method="post" action="" class="box2">
            <p style="font-size: 36px; text-align: center;margin-left:-200px;"><b>Book Your Trip</b></p>
            <label for="pickup"><b>Pick up</b></label>
            <input type="text" id="pickup" name="pickup" placeholder="pickup" class="form-control" required>
            <label for="destination"> <b>Destination</b></label>
            <input type="text" id="destination" name="destination" placeholder="destination" class="form-control"
                required>
            <label for="dot"><b>Date Of Travel </b></label>
            <input type="date" id="dot" name="dot" placeholder="Enter Date of Travel"
                style="height:30px; width: 380px; padding:10px; background-color: #f1f1f1; border: none; border-radius: 10px;"
                class="form-control" required />
            <label for="dot"><b>Time </b></label>
            <input type="time" id="time" name="time" placeholder="Enter current time"
                style="height:30px; width: 380px; padding:10px; background-color: #f1f1f1; border: none; border-radius: 10px;"
                class="form-control" required />
                 <label for="amount"> <b>Amount</b></label>
            <input type="text" id="amount" name="amount" placeholder="amount" class="form-control"
                required>
            <label for="passenger"><b>No. Of Passenger</b></label>
            <input type="text" id="passenger" name="passenger" placeholder="passenger" class="form-control"
                required>
            <input type="checkbox" id="agree" name="agree" value="1" style="width: 15px; height: 15px;" required><b
                style="font-size: 20px;" >Send OTP</b></br>
            <button type="submit" class="btn" style="margin-left:10px ;"><b>Book Cab</b></button>
            {{#if message}}
            <p class="text-danger">{{message}}</p>
            {{/if}}

        </form>
    </div>
</div>
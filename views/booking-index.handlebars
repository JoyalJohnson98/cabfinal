<div class="text">
    <h1 class="text-center" style="text-align: center;">User Booking </h1>
</div>
<div class="container">

    {{!-- <a href="/booking" class="btn btn-primary" style="text-decoration: none;"> + Add New Booking Details! </a> --}}
    <pre></pre>
    <table class="table table-striped mt-4">
        {{!-- style="color:rgb(217, 226, 230) ;" --}}

        {{!-- style="color:rgb(244, 11, 11) ;" --}}
        <tr>
            <th>Id</th>
            <th>Pickup</th>
            <th>Destination</th>
            <th>Date Of Travelling</th>
            <th>Time Of Travelling</th>
            <th>Amount</th>
            <th>No of Passenger</th>
            {{!-- <th>Mobile </th> --}}

        </tr>
        {{#each data}}
        <tr>
            <td>{{this.dataValues.id}}</td>
            <td>{{this.dataValues.pickup}}</td>
            <td>{{this.dataValues.destination}}</td>
            <td>{{this.dataValues.dot}}</td>
            <td>{{this.dataValues.time}}</td>
            <td>{{this.dataValues.amount}}</td>
            <td>{{this.dataValues.passenger}}</td>
            {{!-- <td>{{this.dataValues.mobile}}</td> --}}
            <td>
                {{!-- <button style="background-color:green ;">Accept</button>
                <button style="background-color: red;">Reject</button> --}}
                
                {{!-- <a href="{{this.dataValues.id}}">Booking Accept</a> |
                <a href="{{this.dataValues.id}}" class="text-danger"
                    onclick="return confirm('Are you sure you want to delete this')">Reject</a> --}}

                     
                <a href="/bookingUpdate/{{this.dataValues.id}}">Update</a> |
                <a href="/bookingDelete/{{this.dataValues.id}}" class="text-danger"
                    onclick="return confirm('Are you sure you want to delete this')">Delete</a>
                    {{!-- <a href="/paynow/{{this.dataValues.id}}">Paynow</a>" --}}
            
            </td>
        </tr>
        {{/each}}
    </table>
    <p class="text-end">You are Signin in as: 
        {{!-- style="color:rgb(217, 226, 230) ;" --}}
        <b>{{identity.firstName}} {{identity.lastName}}</b>
    </p>
</div>